<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <div class="card-title">
          <h1>Invoices</h1>
        </div>
        <div class="card-body">
          <p>
            <strong>Company:</strong>
            <%= @invoice.company %>
          </p>

          <p>
            <strong>Contragent:</strong>
            <%= @invoice.contragent %>
          </p>

          <p>
           <strong>Currency:</strong>
             <%= @invoice.amount %> <%= @invoice.currency %>
          </p>

          <p>
            <strong>Date:</strong>
            <%= @invoice.date %>
          </p>
        </div>  

        <div class="card-footer">
          <div class="btn-group">
            <%= link_to 'Edit', edit_invoice_path(@invoice), class: "btn btn-danger" %> 
            <%= link_to 'Back', invoices_path, class: "btn btn-warning" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







